


<div class="col-sm-6 col-md-4 col-lg-4">
  <div class="item"><!-- Portfolio Item #1 -->
    <div class="hover-bg">
      <div class="hover-text off">
        <h4><%= product.title %></h4>
        <br>
        <p><%= product.description %></p>
      <!--  <a class="read-more" href="project-particular.html">Ver producto <span class="fa fa-chevron-circle-right"></span></a>-->
      </div>
      <% unless product.image.blank? %>
      <a data-toggle="modal" data-target="#imageModal_<%= product.id %>" href="#">
        <div class="post_image">
          <%= image_tag product.image.url(:normal), :class => 'media-object' %>
        </div>
      </a>

    </div>
  </div>
</div>


  <div class="modal fade" id="imageModal_<%= product.id %>" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <%= image_tag product.image.url(:normal), :class => 'media-object' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
